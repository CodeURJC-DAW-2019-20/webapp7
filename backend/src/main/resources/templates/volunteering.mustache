{{>layout/header}}

{{^logged}}
{{>layout/navbar-anonymous}}
{{/logged}}

{{#logged}}
{{>layout/navbar-user}}
{{/logged}}
        <!-- Content -->
        <div class="page-content bg-white">
            <!-- inner page banner -->
            <div class="dez-bnr-inr overlay-black-middle" style="background-image:url(/images/background/fondo.jpg);">
                <div class="container">
                    <div class="dez-bnr-inr-entry">
                        <h1 class="text-white">{{advert.name}}</h1>
                        <!-- Breadcrumb row -->
                        <div class="breadcrumb-row">
                            <ul class="list-inline">
                                <li><a href="#">Inicio</a></li>
                                <li>Voluntariado</li>
                            </ul>
                        </div>
                        <!-- Breadcrumb row END -->
                    </div>
                </div>
            </div>
            <!-- inner page banner END -->
            <!-- contact area -->
            <div class="content-block">
                <!-- Helping Congo -->
                <div class="section-full content-inner-1">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="sticky-top">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-6">
                                            <div class="m-b30">
                                                <img src="/images/volunteerings/image-{{advert.id}}.jpg" alt="">
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-6">
                                            <div class="widget bg-white p-lr20 p-t20  widget_getintuch radius-sm">
                                                <h4 class="text-black font-weight-700 p-t10 m-b15">Detalles</h4>
                                                <ul>
                                                    <li><i class="ti-location-pin"></i><strong class="font-weight-700 text-black">Ciudad</strong><span class="text-black-light"> {{advert.city}} </span></li>
                                                    <li><i class="ti-email"></i><strong class="font-weight-700 text-black">E-mail</strong>{{advert.email}}</li>
                                                    <li><i class="ti-bookmark"></i><strong class="font-weight-700 text-black">Categoría</strong>ponercategoria</li>
                                                    <li><i class="ti-timer"></i><strong class="font-weight-700 text-black">Fecha de inicio</strong>{{advert.startdate}}</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="job-info-box">
                                    <h3 class="m-t0 m-b10 font-weight-700 title-head">
                                        <a href="#" class="text-secondry m-r30">{{advert.name}}</a>
                                    </h3>
                                    <ul class="job-info">
                                        <li><i class="ti-bookmark text-black m-r5"></i><strong>Categoría</strong> ponercategoria</li>
                                        <li><i class="ti-timer text-black m-r5"></i><strong>Fecha límite</strong> {{advert.enddate}}</li>
                                        <li><i class="ti-location-pin text-black m-r5"></i> {{advert.city}} </li>
                                    </ul>
                                    <p class="p-t20"></p>

                                    <h5 class="font-weight-600">Descripción</h5>
                                    <div class="dez-divider divider-2px bg-gray-dark mb-4 mt-0"></div>
                                    <p class="p-t20">{{advert.description}}</p>

                                    <form action="/joinToVolunteering" method="POST">
                                    	<input type="hidden" id="user" name="user" value="{{user.id}}" >
                                    	<input type="hidden" id="volunteering" name="volunteering" value={{volunteering}} >
									  	<button type="submit" class="site-button">{{buttonName}}</button>
									
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Job Detail -->
            </div>
            <br>
        </div>
        <div class="like-button grey2">
            <i class="fa fa-heart like grey"></i>
        </div>
        <!-- Content END-->
{{>layout/footer}}